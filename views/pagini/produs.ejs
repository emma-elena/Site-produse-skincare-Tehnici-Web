<!DOCTYPE html>
<html lang="ro">

<head>

    <meta name="keywords" content="skincare, ingrijire, produs, skincare routine">
    <!--cuvintele cheie ale paginii; majoritatea motoarelor de căutare ignoră keywords -->
    <meta name="description" content="Ingrijire. Lifestyle. Produse de calitate.">
    <!-- descrierea paginii, adesea apare sub link când sunt afișate rezultatele căutării -->
    <link href="/resurse/css/produs.css" type="text/css" rel="stylesheet" />

    <title>Pagina produs</title>
    <%- include("../fragmente/head.ejs") %>


</head>
<input type="checkbox" class="checkbox" id="checkbox">
<label for="checkbox" class="checkbox-label">
    <i class="fas fa-moon"></i>
    <i class="fas fa-sun"></i>
    <span class="ball"></span>
</label>

<body>

    <%- include("../fragmente/header.ejs") %>

        <main>
            <section>
                <article id="art-produs">
                    <h3><span class="nume"><%- locals.prod.nume %></span></h3>
                    <p>Pret: <span class="pret"><%- locals.prod.pret %> lei</span></p>
                    <p>Descriere: <span class="descriere"><%- locals.prod.descriere %> </span></p>
                    <!-- <p>Ingrediente: <span class="ingrediente"><%- locals.prod.ingrediente %> </span></p>
                    <p>Calorii: <span class="calorii"><%- locals.prod.calorii %> </span></p> -->
                    <p>Gramaj: <span class="gramaj"><%- locals.prod.gramaj %> g</span></p>
                    <p>Categorie: <span class="categorie"><%- locals.prod.categorie %> </span></p>
                    <!-- <p>Pentru diabetici: <span class="pt_diabetici"><%- locals.prod.pt_diabetici %> </span></p> -->
                    <!-- <p>Data adăugare: <span class="categorie"><%- locals.prod.data_adaugare %> </span></p> -->
                    <figure class="imag-produs">
                        <img src="/resurse/imagini/produse/<%- locals.prod.imagine %>"
                            alt="[imagine <%- locals.prod.nume %>]" />
                    </figure>
                </article>

            </section>
        </main>

        <%- include("../fragmente/footer.ejs") %>
            <a href="#" class="linktop">
                <div id="triunghi"></div>
            </a>
</body>

</html>